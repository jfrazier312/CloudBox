<div id="comment">
  <div class="user-name">
    <%= link_to comment.user.username, user_path(comment.user.id)  %>
  </div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <% if comment.user == current_user %>
      <%= link_to post_comment_path(post, comment), method: :delete, remote: true, id: "delete-#{comment.id}", class: "delete-comment" do %>
          <span class="glyphicon glyphicon-remove delete-comment"></span>
      <% end %>
  <% end %>
</div>
