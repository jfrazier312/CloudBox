<div class="text-center">
  <h1>Upload Image</h1>
</div>

<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_image_select(@post) %>
        <%= simple_form_for @post, html: { multipart: true } do |f| %>
            <div class="row">
              <div class="col-md-12 text-center">
                <% @form_obj = @post %>
                <%= render 'shared/error_messages', object: @form_obj %>
              </div>
              <div class="container-fluid">
                <div class="form-group text-center">
                  <%= f.input :image, label: false, input_html: { onChange: 'loadFile(event)' }, id: "image_#{@post.id}" %>
                </div>
                <div class="form-group">
                  <%= f.label :caption, class: "col-lg-2 control-label" %>
                  <div class="col-lg-10 control-label">
                    <%= f.input :caption, label: false, placeholder: 'Add your caption', class: 'form-control' %>
                  </div>
                </div>
                <br>
                <br>


                <div class="form-group text-center">
                  <%= f.submit "Submit", class: 'btn-success btn-block' %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
