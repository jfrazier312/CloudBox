<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Owner</th>
    <th>Name</th>
    <th>Filename</th>
    <th>Description</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% if @shared_assets.nil? %>
      No Files Shared with you
  <% else %>
      <% @shared_assets.each do |shared_asset| %>
          <tr>
            <% user = User.find(shared_asset.user_id) %>
            <td><%= link_to user.username, user_path(user) %></td>
            <td><%= shared_asset.custom_name %></td>
            <td><%= link_to shared_asset.filename, user_download_path(user, shared_asset) %></td>
            <td><%= shared_asset.description %></td>
            <td></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>
