<p id="notice"><%= notice %></p>

<h1>Files</h1>

<table>
  <thead>
    <tr>
      <th><%= @user.username %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <br>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.filename %></td>
        <td><%= link_to 'Show', user_asset_path(@user, asset) %></td>
        <td><%= link_to 'Edit', edit_user_asset_path(@user, asset) %></td>
        <td><%= link_to 'Destroy', user_asset_path(@user, asset), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asset', new_user_asset_path %>
