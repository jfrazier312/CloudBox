<p id="notice"><%= notice %></p>
<div class="text-center">
  <h1>Files</h1>
</div>
<%= link_to 'Upload File', new_user_asset_path, class: 'pull-right btn-lg' %>

<ul class="nav nav-tabs">
  <% if is_admin? || current_user?(@user)%>
      <li class="active"><a href="#assets" data-toggle="tab">My Files</a></li>
      <li><a href="#sharedwithme" data-toggle="tab">Shared with Me</a></li>
  <% end %>
</ul>

<div id="myTabContent" class="tab-content">

  <div class="tab-pane fade active in" id="assets">
    <br>
    <%= render 'assets/asset_table' %>
  </div>

  <div class="tab-pane fade" id="sharedwithme">
    <br>
    <%= render 'assets/shared_with_me' %>
  </div>
</div>

